# =====================================================
# ðŸ”§ Homelab-SHV Environment Configuration
# =====================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control
# =====================================================

# =================
# General Settings
# =================
TZ=America/Phoenix
PUID=1000
PGID=1000

# =================
# VPN Configuration
# =================
VPN_SERVICE_PROVIDER=protonvpn
VPN_TYPE=wireguard
WIREGUARD_PUBLIC_KEY=your_public_key_here
WIREGUARD_PRIVATE_KEY=your_private_key_here
WIREGUARD_ADDRESSES=10.2.0.2/32
SERVER_COUNTRIES=Japan
SERVER_CITIES=Tokyo
HEALTH_VPN_DURATION_INITIAL=120s

# =================
# Database Settings
# =================
DB_USER=postgres
DB_PASS=your_secure_db_password_here
JWT_SECRET=your_jwt_secret_here

# =================
# API Keys
# =================
RADARR_API_KEY=your_radarr_api_key_here
SONARR_API_KEY=your_sonarr_api_key_here

# =================
# Service Ports
# =================
SUGGESTARR_PORT=5000
TUNARR_SERVER_PORT=8000

# =================
# Backup Configuration
# =================
RESTIC_REPOSITORY=sftp:backup-server:/backups/homelab-shv
RESTIC_PASSWORD=your_restic_password_here
BACKUP_PATHS="/data/docker /data/media"

# =================
# Notification Settings (Ntfy)
# =================
NTFY_SERVER=https://ntfy.sh
NTFY_TOPIC_ALERTS=homelab-shv-alerts
NTFY_TOPIC_SUMMARY=homelab-shv-summary
NTFY_AUTH_TOKEN=your_ntfy_token_here

# =================
# System Settings
# =================
SERVER_NAME=homelab-shv
ADMIN_EMAIL=mrnash404@protonmail.com

# =================
# Advanced Settings
# =================
# Uncomment and configure as needed
# JELLYFIN_PUBLISHED_SERVER_URL=https://jellyfin.yourdomain.com
# DOMAIN_NAME=yourdomain.com
# CLOUDFLARE_API_TOKEN=your_cloudflare_api_token